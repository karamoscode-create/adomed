$FirebaseSDKVersion = '10.18.0'
# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # === AJOUT POUR FORCER LES VERSIONS DE SOUS-DÉPENDANCES ===
  pod 'Firebase/Core', $FirebaseSDKVersion
  pod 'Firebase/Auth', $FirebaseSDKVersion
  pod 'Firebase/Firestore', $FirebaseSDKVersion
  pod 'Firebase/Storage', $FirebaseSDKVersion
  pod 'Firebase/Messaging', $FirebaseSDKVersion
  pod 'Firebase/AppCheck', $FirebaseSDKVersion
  
  pod 'FirebaseAuthInterop', $FirebaseSDKVersion
  pod 'FirebaseAppCheckInterop', $FirebaseSDKVersion
  pod 'FirebaseCoreExtension', $FirebaseSDKVersion
  pod 'FirebaseCoreInternal', $FirebaseSDKVersion
  pod 'FirebaseInstallations', $FirebaseSDKVersion
  pod 'FirebaseSharedSwift', $FirebaseSDKVersion
  # === FIN DE L'AJOUT ===

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

# =========== BLOC post_install : nettoyage des flags -G ===========
post_install do |installer|
  # permet d'accéder aux helpers de manipulation Xcode
  require 'xcodeproj'

  # 1) Appliquer les réglages additionnels Flutter et forcer quelques settings utiles,
  #    puis nettoyer les flags commençant par -G dans les OTHER_* build settings.
  installer.pods_project.targets.each do |target|
    # conserve les réglages additionnels fournis par Flutter
    begin
      flutter_additional_ios_build_settings(target)
    rescue => e
      # si flutter_additional_ios_build_settings n'existe pas pour une raison,
      # on continue l'exécution pour ne pas casser l'installation des pods.
      puts "Warning: flutter_additional_ios_build_settings failed for target #{target.name}: #{e}"
    end

    target.build_configurations.each do |config|
      # Force le déploiement sur iOS 13.0 si nécessaire
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'

      # Format d'information de debug moderne
      config.build_settings['DEBUG_INFORMATION_FORMAT'] = 'dwarf-with-dsym'

      # Nettoyage des flags potentiellement problématiques commençant par -G (ex: -GCC_WARN_INHIBIT_ALL_WARNINGS)
      %w(OTHER_LDFLAGS OTHER_CFLAGS OTHER_SWIFT_FLAGS).each do |key|
        next unless config.build_settings[key]
        cleaned = config.build_settings[key].to_s.gsub(/-G[A-Z0-9_]+/, ' ').squeeze(' ').strip
        config.build_settings[key] = cleaned
      end
    end
  end

  # 2) Nettoie aussi les COMPILER_FLAGS attachés aux PBXBuildFile (cas observé dans Pods.xcodeproj)
  installer.pods_project.files.each do |file|
    next unless file.isa == 'PBXBuildFile'
    settings = file.settings
    next unless settings && settings['COMPILER_FLAGS']
    settings['COMPILER_FLAGS'] = settings['COMPILER_FLAGS'].to_s.gsub(/-G[A-Z0-9_]+/, ' ').squeeze(' ').strip
  end

  # 3) Sauvegarde les modifications dans le projet Pods
  installer.pods_project.save
end
# =========== FIN post_install ===========
